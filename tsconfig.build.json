{
   "extends": "./tsconfig.json",
   "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": false,
      "noEmit": false
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/__tests__/**",
      "**/__mocks__/**",
      "src/cli/**",
      "dist",
      "node_modules"
   ]
}